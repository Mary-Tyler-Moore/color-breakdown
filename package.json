{
    "name": "color-breakdown",
    "version": "0.0.0",
    "description": "Extract prominent colors from an image with this PWA tool",
    "main": "index.js",
    "private": true,
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "lint:js": "prettier \"src/**/*.ts\" --parser typescript",
        "lint:css": "prettier \"public/css/**/*.css\" --parser css",
        "lint": "npm run lint:js -- --write && npm run lint:css -- --write",
        "lint:check": "npm run lint:js -- --list-different && npm run lint:css -- --list-different",
        "serve": "http-server"
    },
    "author": "Tiger Oakes",
    "license": "MIT",
    "dependencies": {
        "idb": "^2.1.3"
    },
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "http-server": "^0.11.1",
        "jest": "^23.6.0",
        "prettier": "^1.11.1",
        "ts-jest": "^23.10.5",
        "tslib": "^1.9.3",
        "typescript": "^3.2.2"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
